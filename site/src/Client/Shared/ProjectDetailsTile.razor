<MudItem xs="12" sm="6">
    <MudPaper Elevation="5" Class="pa-2 px-4">
        <MudText Typo="Typo.h5">@Title</MudText>
        @if (IsMarkdown == true)
        {
            <MudPaper Class="px-4">
                @((MarkupString)Content)
            </MudPaper>
        }
        else
        {
            <MudText Class="px-4" Typo="Typo.body1">@Content</MudText>
        }
    </MudPaper>
</MudItem>

@code {

    [Parameter]
    public string Title { get; set; } = default!;

    [Parameter]
    public string Content { get; set; } = default!;

    [Parameter]
    public bool? IsMarkdown { get; set; } = false;

}