@foreach (var t in Technologies)
{
    <MudChip Color="@GetColor(t)">@t</MudChip>
}

@code {
    private static Dictionary<string, Color> _colorMap = new();
    private Color[] _colors = { Color.Primary, Color.Secondary, Color.Tertiary, Color.Info, Color.Success, Color.Warning, Color.Error, Color.Dark, Color.Surface };
    private int _colorIndex = 0;

    [Parameter]
    public IEnumerable<string> Technologies { get; set; }
    
    private Color GetColor(string technology)
    {
        if (!_colorMap.ContainsKey(technology))
        {
            var color = GetNextColor();
            _colorMap.Add(technology, color);
        }

        return _colorMap[technology];
    }
    
    private Color GetNextColor()
    {
        var color = _colors[_colorIndex];
        _colorIndex = (_colorIndex + 1) % _colors.Length;
        return color;
    }
}